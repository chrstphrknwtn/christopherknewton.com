{
  "version": 2,
  "alias": ["christopherknewton.com"],
  "builds": [
    { "src": "/routes/*.js", "use": "@now/node" },
    { "src": "/static/**/*", "use": "@now/static" }
  ],
  "routes" : [
    { "handle": "filesystem" },
    { "src": "/", "dest": "/routes/home.js" },
    { "src": "/posts", "dest": "/routes/posts.js" },
    { "src": "/posts/(?<slug>[^/]*)", "dest": "/routes/posts.js?slug=$slug" },
    { "src": "/projects", "dest": "/routes/projects.js" },
    { "src": "/projects/(?<slug>[^/]*)", "dest": "/routes/projects.js?slug=$slug" },
    { "src": "/preview/(?<id>[^/]*)", "dest": "/routes/preview.js?id=$id" }
  ]
}
