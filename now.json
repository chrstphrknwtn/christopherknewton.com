{
  "version": 2,
  "alias": ["christopherknewton.com"],
  "builds": [
    { "src": "/src/index.js", "use": "@now/node" },
    { "src": "/src/work.js", "use": "@now/node" },
    { "src": "/src/index.css", "use": "@now/static" },
    { "src": "/images/**/*", "use": "@now/static" }
  ],
  "routes" : [
    { "handle": "filesystem" },
    { "src": "/", "dest": "/src/index.js" },
    { "src": "/index.css", "dest": "/src/index.css" },
    { "src": "(?<slug>[^/]*)", "dest": "/src/work.js?slug=$slug" }
  ]
}
